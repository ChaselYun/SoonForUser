<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soon.android.fragments.FoodViewPagerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sort_recycler_view"
                android:layout_width="70dp"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/food_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sort_recycler_view"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
